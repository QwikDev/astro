{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node", "vite/client"],
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es2021", "DOM", "webworker", "DOM.Iterable"],
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "Node",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceRoot": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@qwikdev/astro": ["libs/qwikdev-astro/src/index.ts"],
      "@qwikdev/astro/server": ["libs/qwikdev-astro/server.ts"],
    },
  },
  "files": ["./.eslintrc.cjs", "./prettier.config.cjs"],
  "include": ["libs/**/*", "apps/**/*", "./*.d.ts", "./*.config.ts"],
  "exclude": ["**/dist"],
}
